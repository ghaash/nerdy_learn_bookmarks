<p id="notice"><%= notice %></p>

<h1>Favorites</h1>

<h3>Filter posts:</h3>
 <%= form_tag("/bookmarks", method: "get") do %>
   <%= select_tag "bookmark", options_from_collection_for_select(@bookmark, "id", "name"), include_blank: true %>
   <%= select_tag "date", options_for_select(["Today", "Old News"]), include_blank: true %>
   <%= submit_tag "Filter" %>
 <% end %>

<table>
  <thead>
    <tr>
      <th>Your Favorites</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.name %></td>
        <td><%= favorite.description %></td>
        <td><%= favorite.url %></td>

        <td><%= link_to 'Show', favorite %></td>
        <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
        <td><%= link_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite', new_favorite_path %>
<%= link_to 'bookmarks', bookmarks_path %>

<%= search_form_for @q do |f| %>
<%= f.label :name_cont %>
<%= f.search_field :name_cont %>
<%= f.submit %>
<% end %>
